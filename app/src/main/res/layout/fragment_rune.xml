<?xml version="1.0" encoding="utf-8"?>
<com.lepus.cang2.FractionTranslateLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lv7"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iv_minus7"
                        app:srcCompat="@drawable/ic_remove_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/tv_7"
                        android:gravity="center"
                        android:background="@drawable/tv_border"
                        android:layout_width="105dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/iv_plus7"
                        app:srcCompat="@drawable/ic_add_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lv6"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iv_minus6"
                        app:srcCompat="@drawable/ic_remove_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/tv_6"
                        android:gravity="center"
                        android:layout_width="105dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/iv_plus6"
                        app:srcCompat="@drawable/ic_add_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lv5"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iv_minus5"
                        app:srcCompat="@drawable/ic_remove_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/tv_5"
                        android:gravity="center"
                        android:layout_width="105dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/iv_plus5"
                        app:srcCompat="@drawable/ic_add_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lv4"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iv_minus4"
                        app:srcCompat="@drawable/ic_remove_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/tv_4"
                        android:gravity="center"
                        android:layout_width="105dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/iv_plus4"
                        app:srcCompat="@drawable/ic_add_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Lv3"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/iv_minus3"
                        app:srcCompat="@drawable/ic_remove_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                    <TextView
                        android:id="@+id/tv_3"
                        android:gravity="center"
                        android:layout_width="105dp"
                        android:layout_height="35dp" />

                    <ImageView
                        android:id="@+id/iv_plus3"
                        app:srcCompat="@drawable/ic_add_circle_outline_blue_24dp"
                        android:layout_width="35dp"
                        android:layout_height="35dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_save"
                    android:text="保存"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btn_save_return"
                    android:text="保存退出"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.lepus.cang2.FractionTranslateLayout>
